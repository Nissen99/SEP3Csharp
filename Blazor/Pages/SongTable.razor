@page "/SongTable"

@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env 


@if (SongList == null)
{
    <em>Loading...</em>
}
else if (!SongList.Any())
{
    <br/>
    <em>No songs found.</em>
}
else
{
    <table class="table">
        <thead>
        
        <tr>
            <th></th>
            <th>Title</th>
            <th>Duration</th>
            <th>Album</th>
            <th>Artist</th>
            <th>Release Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var song in SongList)
        {
            <tr>
                <td>
                    <AuthorizeView Policy="MustBeLoggedIn">
                        <i class="mr-4 oi oi-plus" @onclick="() => PerformAddToPlaylist(song)"/>
                    </AuthorizeView>
                    
                    @if (CurrentSong != null && CurrentSong.Id == song.Id)
                    {
                        if (IsPlaying())
                        {
                            <i class="oi oi-media-pause" @onclick="() => TogglePlay()"/>
                        }
                        else
                        {
                            <i class="oi oi-media-play" @onclick="() => TogglePlay()"/>
                        }
                    }
                    else
                    {
                        <i class="oi oi-media-play" @onclick="() => PlaySong(song)"/>

                    }

                </td>

                <td>@song.Title</td>
                <td>@songDurationDisplay(song)</td>
                <td>@song.Album.Title</td>
                <td>@generateArtists(song)</td>
                <td>@song.ReleaseYear</td>
                <td>
                    <button @onclick="@(() => remove(song))">
                        <i class="oi oi-trash" style="color:red"/>
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
}
